<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.queuerPowerRangers.app.activities.MainActivity">

    <EditText
        android:inputType="text"
        android:id="@+id/create_username"
        android:hint="@string/username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:inputType="textPassword"
        android:hint="@string/password"
        android:id="@+id/create_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:layout_marginTop="10dp"
        android:text="@string/auto_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/auto_login"/>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_create_account"
        android:layout_gravity="center"
        android:text="@string/create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/login_unsuccessful"
        android:text="@string/no_login"
        android:editable="false"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/creator_progress"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_width="@dimen/abc_action_bar_default_height"
        android:layout_height="@dimen/abc_action_bar_default_height" />

    <TextView
        android:id="@+id/have_account"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="@string/have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#0b84aa"/>

</LinearLayout>
